<Page x:Class="SubnettingTrainerWpf.Sites.Ipv4Generate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SubnettingTrainerWpf.Sites"
      mc:Ignorable="d" Background="#FF404040" 
      d:DesignHeight="600" d:DesignWidth="620"
      Title="Ipv4Generate">
  
    <Grid>
        <StackPanel Height="30" VerticalAlignment="Top" Orientation="Horizontal" Margin="0,30,0,0" Background="#FF1BA2E6">
            
            <Label Content="Anzahl: " FontSize="15" Foreground="White" Margin="200,0,5,0"/>
            <TextBox x:Name="tb_ammount" FlowDirection="RightToLeft" Text="32" Width="51" Height="30" FontSize="18" Margin="0,0,5,0"/>
            <RadioButton x:Name="rb_anal" IsChecked="True" Content="Analyse" Margin="25,7,5,0" Background="#FF454545" Foreground="White"/>
            <RadioButton x:Name="rb_split" Content="Teilen" Margin="0,7,25,0" Background="#FF454545" Foreground="White"/>
            <Button Content="Generieren" Width="104" Height="30" Click="Button_Click"/>
        </StackPanel>
        <TextBox x:Name="tb_solve" TextWrapping="Wrap" FontSize="16"  Margin="4,74,311,35"/>
        <TextBox x:Name="tb_solution" TextWrapping="Wrap" FontSize="16"  Margin="313,74,4,35"/>
        

    </Grid>
</Page>
